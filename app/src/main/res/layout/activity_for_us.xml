<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ForUsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_1"
        android:padding="15dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/info_text_1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/info_text_1"
            android:paddingTop="15dp"
            />

        <ImageView
            android:id="@+id/group_photo_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/group_photo"
            android:paddingTop="15dp"
            />

        <TextView
            android:id="@+id/info_text_2"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/info_text_2"
            app:layout_constraintBottom_toBottomOf="@id/group_photo_1"
            android:paddingTop="15dp"/>

        <ImageView
            android:id="@+id/spray_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/spray_image"
            app:layout_constraintBottom_toBottomOf="@id/info_text_2"
            android:paddingTop="15dp"/>

        <TextView
            android:id="@+id/info_text_3"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/info_text_3"
            app:layout_constraintBottom_toBottomOf="@id/spray_image"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"/>
    </LinearLayout>
</ScrollView>